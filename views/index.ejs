<!DOCTYPE html>
<html>
<head>
  <title>Express.js & PostgreSQL Web App</title>
</head>
<body>
  
  <h2>Pretraživanje korisnika:</h2>
  <form method="post" action="/search">
    <label for="name">Id:</label>
    <input type="text" id="id" name="id" required>
    <button type="submit">Pretraži</button>
    <label >Vulnerable</label>
    <input type="checkbox" name="sqlcheck" id="sqlcheck" value="true">
  </form>
  <h1>Popis korisnika</h1>
  <ul>
    <% users.forEach(function(user) { %>
      <li><%= user.id %> - <%= user.name %> - <%= user.email %></li>
    <% }); %>
  </ul>
  <h1>Login Page</h1>
  
  <form method="POST" action="/login">
    
    <label for="username">Username:</label>
    <input type="text" name="username" id="username" required><br>

    <label for="password">Password:</label>
    <input type="password" name="password" id="password" required><br>
    <label >Vulnerable</label>
    <input type="checkbox" name="loginCheck" id="loginCheck" value="true">
    <input type="submit" value="Login">
  </form>
</body>
</html>
